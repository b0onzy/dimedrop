# DimeDrop Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control!

# eBay API (https://developer.ebay.com)
EBAY_APP_ID=your_ebay_app_id_here
EBAY_CERT_ID=your_ebay_cert_id_here
EBAY_DEV_ID=your_ebay_dev_id_here
EBAY_OAUTH_TOKEN=your_ebay_oauth_token_here

# Reddit API (https://old.reddit.com/prefs/apps/)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=DimeDrop/1.0 (basketball card price tracker)

# NewsAPI (https://newsapi.org)
NEWS_API_KEY=your_newsapi_key_here

# API-Basketball (https://api-sports.io)
SPORTS_API_KEY=your_sports_api_key_here

# Supabase Database (https://supabase.com)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Auth0 (https://auth0.com)
AUTH0_DOMAIN=your_auth0_domain_here
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here

# Application Settings
ENVIRONMENT=development
DEBUG=True
API_BASE_URL=http://localhost:8000

# Hugging Face (https://huggingface.co)
HUGGING_FACE_TOKEN=your_hf_token_here

# Sentry Error Tracking (https://sentry.io)
SENTRY_DSN=your_sentry_dsn_here
